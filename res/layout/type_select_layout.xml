<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:gravity="center"
    android:background="@color/popupview_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/block1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/type1"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/task_type_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true" >
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/type2"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/task_type_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true" >
            </ImageView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/block2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/block1"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/type3"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/task_type_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true" >
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/type4"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/task_type_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true" >
            </ImageView>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>